# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=quiz_user
DB_PASSWORD=quiz_password
DB_NAME=quiz_db
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_HOURS=24

# Server Configuration
PORT=8080
GIN_MODE=debug

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880  # 5MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# Rate Limit Configuration
RATE_LIMIT_GENERAL=100  # requests per minute
RATE_LIMIT_ADMIN=1000   # admin requests per minute
RATE_LIMIT_ANSWER=60    # answer requests per minute

# WebSocket Configuration
WS_ORIGIN=*

# Frontend URLs (for Docker environment)
ADMIN_DASHBOARD_URL=http://admin-dashboard:3000
PARTICIPANT_APP_URL=http://participant-app:3000